<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_room"
    tools:context=".splashscreen.SplashActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/logo_splash_screen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_hotel" />

        <TextView
            android:id="@+id/tv_splash_screen"
            style="@style/text_logo_intro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fboking" />

        <TextView
            android:id="@+id/tv_slogan_splash_screen"
            style="@style/text_intro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fboking_hotel_slogan" />
    </LinearLayout>
</LinearLayout>